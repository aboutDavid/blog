---
layout: layouts/base.njk
templateClass: tmpl-post
---
<script defer src="https://comments.aboutdavid.me/js/commento.js"></script>
<script>
function calcrt(a){var b=Math.round(a.match(/.{1,5}/g).length/225);return b=0>=b?"Less than a minute read.":1===b?`${b} min read.`:isNaN(b)?"Failed to calculate readtime!":"Failed to calculate readtime!",b}
</script>
<h1>{{ title }}</h1>
<small><div id="date"></div> | <div id="rt"></div></small>

{{ content | safe }}

<hr>
<ul>
  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
</ul>
<div id="commento"></div>
<script>
var d = new Date("{{ date }}")
document.getElementById("date").innerHTML = `${d.getMonth() + 1}/${d.getDate()}/${d.getFullYear()}`;
document.getElementById("rt").innerHTML = calcrt(`{{ content }}`);
</script>
